<%- include('partials/header') %>

<style>
    .hero {
        position: relative;
        height: 600px;
        background-image: url('/images/hero-background-tech.jpg');
        background-size: cover;
        background-position: center 13%;
        margin-top: -80px;
        overflow: hidden;
    }
    .hero-content {
        position: relative;
        z-index: 2; 
        text-align: center;
        padding-top: 80px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        /* ▼▼▼ [핵심 수정 1] 좌우 패딩을 추가하여 텍스트 위치를 조정합니다 ▼▼▼ */
        padding-left: 1rem;
        padding-right: 1rem;
    }
    .hero-content h1 { 
        color: #0F172A;
    }
    .hero-content p { 
        color: #2F3B40;
    }
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #0F172A;
    }
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        width: 60px;
        height: 3px;
        background: #54B435;
        transform: translateX(-50%);
    }
    .new-blog-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #e5e7eb;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        height: 250px;
    }
    .new-blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.08);
    }
    .card-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 1rem;
    }
    .card-logo {
        height: 24px;
        margin-right: 8px;
    }
    .card-brand-name {
        font-size: 0.875rem;
        font-weight: 500;
        color: #6b7280;
    }
    .card-content {
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .card-title {
        color: #1f2937;
        font-weight: 600;
        font-size: 1.125rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .btn-primary { background: #54B435; color: white; padding: 0.75rem 1.5rem; border-radius: 5px; font-weight: 500; transition: background 0.3s; }
    .btn-primary:hover { background: #469b2d; }
    .btn-outline { border: 2px solid #54B435; color: #54B435; padding: 0.75rem 1.5rem; border-radius: 5px; font-weight: 500; transition: background 0.3s, color 0.3s; }
    .btn-outline:hover { background: #54B435; color: white; }
    .contact-info-card { background-color: #ffffff; padding: 2.5rem; border-radius: 8px; box-shadow: 0 10px 25px rgba(0,0,0,0.05); border: 1px solid #e5e7eb; height: 100%; }
    .info-block { display: flex; align-items: flex-start; margin-bottom: 1.75rem; }
    .info-block .icon { flex-shrink: 0; width: 50px; height: 50px; background-color: #f0fdf4; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1.5rem; }
    .info-block .icon i { color: #54B435; font-size: 1.5rem; }
    .info-block .info-text h4 { color: #0F172A; font-weight: 700; font-size: 1.125rem; margin-bottom: 0.5rem; }
    .info-block .info-text p, .info-block .info-text a { color: #2F3B40; font-size: 1rem; line-height: 1.6; }
    @media (max-width: 768px) {
        .hero {
            background-image: url('/images/hero-background-mobile.jpg');
        }
    }
</style>

