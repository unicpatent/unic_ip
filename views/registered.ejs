    }
    
    // 5. ê°ë©´ ì—°ì°¨ë£Œ ê³„ì‚°
    const discountedFee = Math.round(normalFee * (1 - discountRate));
    
    // 6. ì¶”ê°€ ë¹„ìš©ì€ ì¼ë‹¨ 0ìœ¼ë¡œ ì„¤ì •
    let additionalFee = 0;
    let finalFee = discountedFee;
    
